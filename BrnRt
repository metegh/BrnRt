local HttpService = game:GetService("HttpService")
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- üîπ –¢–≤–æ–∏ –¥–∞–Ω–Ω—ã–µ PandaAuth
local API_KEY = "84a02f231b73ee4f6c6a8eb3e82a6198523c32e1dcf19f09e8bc132f72f0b497"
local SERVICE_IDENTIFIER = "rblhub" -- –¢–≤–æ–π Identifier Name
local API_URL = "https://api.pandadevelopment.net/api/user"

local Window = Fluent:CreateWindow({
    Title = "Key System | PandaAuth",
    SubTitle = "by PandaDevelopment",
    TabWidth = 160,
    Size = UDim2.fromOffset(400, 200),
    Acrylic = true,
    Theme = "Dark"
})

local Tabs = {
    Main = Window:AddTab({ Title = "Key System", Icon = "" })
}

local userKey = ""

-- ‚úÖ –¢–ï–ö–°–¢–ë–û–ö–° –î–õ–Ø –í–í–û–î–ê –ö–õ–Æ–ß–ê
local KeyInput = Tabs.Main:AddInput("KeyInput", {
    Title = "–í–≤–µ–¥–∏—Ç–µ –∫–ª—é—á:",
    Default = "",
    Placeholder = "–í–∞—à PandaAuth –∫–ª—é—á",
    Finished = true,
    Callback = function(Value)
        userKey = Value
        print("–ö–ª—é—á –≤–≤–µ–¥—ë–Ω:", userKey)
    end
})

-- ‚úÖ –ö–ù–û–ü–ö–ê –ü–†–û–í–ï–†–ö–ò –ö–õ–Æ–ß–ê
Tabs.Main:AddButton({
    Title = "‚úÖ –ü—Ä–æ–≤–µ—Ä–∏—Ç—å –∫–ª—é—á",
    Callback = function()
        if userKey == "" then
            return Fluent:Notify({Title = "–û—à–∏–±–∫–∞", Content = "–í–≤–µ–¥–∏—Ç–µ –∫–ª—é—á!", Duration = 5})
        end

        local Response
        pcall(function()
            Response = syn.request({
                Url = API_URL,
                Method = "GET",
                Headers = {
                    ["Authorization"] = "Bearer " .. userKey,
                    ["x-api-key"] = API_KEY,
                    ["service"] = SERVICE_IDENTIFIER
                }
            })
        end)

        if not Response or Response.StatusCode ~= 200 then
            return Fluent:Notify({
                Title = "–û—à–∏–±–∫–∞",
                Content = "–ù–µ–≤–µ—Ä–Ω—ã–π –∫–ª—é—á –∏–ª–∏ API –Ω–µ–¥–æ—Å—Ç—É–ø–Ω–æ!",
                Duration = 5
            })
        end

        local Data = HttpService:JSONDecode(Response.Body)

        if Data and Data.id then
            Fluent:Notify({
                Title = "–£—Å–ø–µ—Ö!",
                Content = "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å, " .. Data.username,
                Duration = 5
            })

            -- ‚úÖ –∑–¥–µ—Å—å –∑–∞–ø—É—Å–∫–∞–µ—Ç—Å—è —Ç–≤–æ–π —Ö–∞–±:
            -- loadstring(game:HttpGet("https://site.com/your-main-hub.lua"))()
        else
            Fluent:Notify({
                Title = "–û—à–∏–±–∫–∞",
                Content = "–ö–ª—é—á –Ω–µ –Ω–∞–π–¥–µ–Ω!",
                Duration = 5
            })
        end
    end
})

-- ‚úÖ –ö–ù–û–ü–ö–ê –ü–û–õ–£–ß–ï–ù–ò–Ø –ö–õ–Æ–ß–ê
Tabs.Main:AddButton({
    Title = "üîó –ü–æ–ª—É—á–∏—Ç—å –∫–ª—é—á",
    Callback = function()
        setclipboard("https://pandaauth.gg/your-link-here") -- –∑–∞–º–µ–Ω–∏—à—å –Ω–∞ —Å–≤–æ—é —Å—Å—ã–ª–∫—É
        Fluent:Notify({
            Title = "–°–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–æ!",
            Content = "–°—Å—ã–ª–∫–∞ –Ω–∞ PandaAuth —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞.",
            Duration = 5
        })
    end
})
